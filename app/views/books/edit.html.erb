<div class="edit-cntent mx-4 mt-4">
  <div class="ms-4">
    <h1 class="h3 hw-bold">Editing Book</h1>
    <%= flash[:notice] %>
    <% if @book.errors.any? %>
    <div class="errors-area border border-danger">
      <h2 class="text-center bg-danger text-white h6 pb-1"><%= @error %></h2>
      <p class="ms-4 mb-2">
      <%= @book.errors.count %>件のエラーが発生しました
      </p>
      <ul class="ms-3">
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_with model:@book, method: :patch do |f| %>
    <div class="mb-2">
      <label class="d-block">Title</label>
      <%= f.text_field :title %>
    </div>
  <div class="mb-2">
    <label class="d-block">Body</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
  <div class="mt-2">
    <%= link_to 'show',book_path(@book.id) %>
    <span>|</span>
    <%= link_to 'back','/books' %>
  </div>
  <% end %>
  </div>
</div>