<h1>Editing Book</h1>
<div>
  <%= flash[:notice] %>
</div>
<%= form_with model:@book, method: :patch do |f| %>
<div>
<label>Title</label>
<%= f.text_field :title %>
</div>
<div>
<label>Body</label>
<%= f.text_area :body %>
</div>
<%= f.submit 'Update Book' %>
<%= link_to 'show',book_path(@book.id) %>
<%= link_to 'back','/books' %>
<% end %>