<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
<% @books.each do |book| %>
<tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'show',book_path(book.id) %></td>
    <td><td><%= link_to 'edit',edit_book_path(book.id) %></td></td>
    <td><%= link_to 'Destroy',book_path(book.id), method: :delete %></td>
</tr>
    <% end %>
    </tbody>
</table>
<% if @book.errors.any? %>
<p>
<div>
<%= flash[:notice] %>
</div>
<%= @book.errors.count %>件のエラーが発生しました
</p>
<ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>
<h2>New book</h2>
<%= form_with model:@book do |f| %>
<div>
<label>Title</label>
<%= f.text_field :title %>
</div>
<div>
<label>Body</label>
<%= f.text_area :body %>
</div>
<%= f.submit 'Create Book' %>
<% end %>
